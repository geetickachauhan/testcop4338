#include <stdio.h>
#include <string.h>
void B(FILE *f)
{
    printf("\nPrinting characters of each line in reverse\n");
    
    char line[81];
    while(fgets(line, sizeof(line), f))
    {
        for(int i = strlen(line) - 2; i>= 0; i--)
            printf("%c", line[i]);
        printf("\n");
    }
}
